<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookStore Data</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#">Books</a>
              </li>
            </ul>
            
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop"
                aria-controls="staticBackdrop">
                Add Data
            </button>
          </div>
        </div>
      </nav>



    <div class="offcanvas offcanvas-end" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop"
        aria-labelledby="staticBackdropLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="staticBackdropLabel">Add Data</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form method="post" action="/sendDeta" enctype="multipart/form-data">
                <table align="center" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <th>Title</th>
                        <td><input type="text" name="title" required></td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td><input type="text" name="author" required></td>
                    </tr>

                    <tr>
                        <th>
                            Description
                        </th>
                        <td>
                            <textarea type="text" name="description"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <th>Genre</th>
                        <td class="d-flex flex-wrap">
                            <% var Genre=["Action","Adventure","Mystery","Horror","Historical","Romance","Fantasy" ] %>
                                <% for( let i=0; i < Genre.length; i++ ) { %>
                                    <li>
                                        <input type="checkbox" name="genre" value="<%= Genre[i] %>">
                                        <%= Genre[i] %>
                                    </li>
                                    <% } %>
                        </td>
                    </tr>

                    <tr>
                        <th>Price</th>
                        <td><input type="number" name="price" required></td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td><input type="number" name="stock" required></td>
                    </tr>
                    <tr>
                        <th>Published Date</th>
                        <td>
                            <input type="date" name="publishedDate" />
                        </td>
                    </tr>
                    <tr>
                        <th>Publisher</th>
                        <td><input type="text" name="publisher" required></td>
                    </tr>
                    <tr>
                        <th>Cover Image</th>
                        <td><input type="file" name="coverImage" required></td>
                    </tr>
                    <tr>
                        <% var rating=["1","2","3","4","5"] %>
                            <th>Rating</th>
                            <td>
                                <% for( let i=0; i < rating.length; i++ ) { %>

                                    <input type="radio" name="rating" value="<%= rating[i] %>">
                                    <%= rating[i] %>

                                        <% } %>
                            </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" name="submit" class="btn btn-primary">
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>


    <div class="container d-flex flex-wrap justify-content-center gap-3">
        <% empData.map((v,i)=>{ %>
            <% %>
                <div class="card mt-4" style="width: 18rem;">
                    <img src="<%= v.coverImage %>" height="300" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= v.title %>
                        </h5>
                        <p class="card-text mb-0">
                            <%= v.description %>
                        </p>
                        <p class="mb-0"><span class="fw-bolder">Genre:</span> &nbsp;
                            <%= v.genre.length>=3?v.genre[0]+", "+v.genre[1]+", "+v.genre[2]+"...":v.genre %>
                        </p>
                        <p class="mb-0"><span class="fw-bolder">Price:</span> &nbsp;<%= v.price %> &nbsp;
                                <span class="fw-bolder">Stock:</span> &nbsp;<%= v.stock %>
                        </p>
                        <p class="mb-0"><span class="fw-bolder">Rating:</span> &nbsp;<%= v.rating %> <span class="fs-5 text-warning"> &#9733;</span>
                        </p>
                        <a href="/view-more/<%= v._id %>" class="btn btn-primary">View More</a>
                    </div>
                </div>
                <% }) %>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>